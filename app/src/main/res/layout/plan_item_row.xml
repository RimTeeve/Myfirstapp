<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/plan_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="10dp"
        android:elevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Plan Title"
                android:id="@+id/plan_item_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plan_dates_text"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/plan_item_label" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plan_meal_count"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/plan_dates_text"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

